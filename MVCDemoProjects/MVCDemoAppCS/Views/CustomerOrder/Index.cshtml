@model IEnumerable<MVCDemoAppCS.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Customer Name
                @*@Html.DisplayNameFor(model => model.Customer.CustomerName)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
            </td>
        </tr>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Rate
            </th>
            <th>
                Sub Total
            </th>
            <th></th>
        </tr>
        foreach (var orderedProduct in item.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => orderedProduct.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => orderedProduct.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => orderedProduct.Rate)
                </td>
                <td>
                    @(orderedProduct.Rate * orderedProduct.Quantity)
                </td>
                <td>
                    @*@Html.ActionLink("Editx", "Edit", "OrderDetails", new { OrderId = orderedProduct.OrderId, ProductId = orderedProduct.ProductId }, null) |
                        @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })*@
                </td>
            </tr>
        }
    }

</table>
